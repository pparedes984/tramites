Ext.define('Tramites.view.administracion.AsuntosParametrosViewController', {
    extend: 'Ext.app.ViewController',
    alias: 'controller.administracion.asuntosparametros',

    onCbAsuntoBuscarKeyup: function(textfield, e, eOpts) {
        var txtAsunto = Ext.getCmp('cbAsuntoBuscar').getValue();
        if(txtAsunto !== null && e.isSpecialKey() === false){//8 = Backspace
            var strAsunto = Ext.getCmp('cbAsuntoBuscar').getStore();
            strAsunto.removeAll();
            Ext.Ajax.request({
                method: 'post',
                url: '../servidor/tramites/asunto/getAsuntoBusqueda',
                params: {
                    asunto: txtAsunto
                },
                success: function (response, options) {
                    strAsunto.load();
                    Ext.getCmp('cbAsuntoBuscar').expand();
                }
            });
        }
    },

    onBtnLimpiarAsuntosClick: function(button, e, eOpts) {
        Ext.getCmp('grdAsuntos').getStore().removeAll();
        var strAsunto = Ext.getStore('Asunto');
        strAsunto.load();
        Ext.getCmp('grdParametroAsunto').getStore().removeAll();
    },

    onGrdAsuntosRender: function(component, eOpts) {
        this.onBtnLimpiarAsuntosClick();
    },

    onGrdAsuntosItemClick: function(dataview, record, item, index, e, eOpts) {
        var g = Ext.getCmp('grdAsuntos');
        var rec = g.selection;
        var txtasunto = rec.data.ASU_CODIGO;
        var strParam = Ext.getCmp('grdParametroAsunto').getStore();
        strParam.removeAll();
        strParam.proxy.extraParams = {
            asunto: txtasunto
        };
        strParam.load();
    },

    onBtnAgregarParamAsuntoClick: function(button, e, eOpts) {
        var grid = Ext.getCmp('grdParametroAsunto');
        var store = grid.getStore();
        var g = Ext.getCmp('grdAsuntos');
        var arrayKeys = g.getSelectionModel().selected.items;
        var indice = g.getSelectionModel().selectionStartIdx;
        if(arrayKeys.length === 0){
            Ext.Msg.alert('Error', 'Debe escoger un Asunto');
        }
        else
        {
            var rec = g.selection;
            var asuntot = rec.data.ASU_CODIGO;
            var strParam = Ext.getCmp('cbParam2').getStore();
            strParam.proxy.extraParams = {
                asu: 1,
                asunto: asuntot
            };
            store.insert(0,
            {
                ASU_CODIGO: asuntot,
                PRM_ID: 0
            });
            strParam.load();
        }
    },

    onBtnQuitarParamAsuntoClick: function(button, e, eOpts) {
        var g = Ext.getCmp('grdAsuntos');
        var arrayKeys = g.getSelectionModel().selected.items;
        var indice = g.getSelectionModel().selectionStartIdx;
        if(arrayKeys.length === 0)
        Ext.Msg.alert('Error', 'Debe escoger un asunto');
        else
        {
            var grid = Ext.getCmp('grdParametroAsunto');
            var arrayKeys = grid.getSelectionModel().selected.items;
            var indice = grid.getSelectionModel().selectionStartIdx;
            if(arrayKeys.length === 0)
            Ext.Msg.alert('Error', 'Debe escoger un parametro');
            else
            {
                var store = grid.getStore();
                var rec = grid.selection;
                var reco = g.selection;
                console.log(rec.data.PRM_ID);
                if(rec.data.PRM_ID === Ext.getCmp('cbParametroPrincipal').getValue() || rec.data.PRM_ID === 0){
                    store.remove(rec);
                    store.sync(
                    {
                        params:{
                            asunto: reco.data.ASU_CODIGO,
                            parametro: rec.data.PRM_ID
                        },
                        success: function(batch, success)
                        {
                            store.commitChanges();
                            store.load();
                        },

                        failure: function(batch, success)
                        {
                            Ext.Msg.alert('Error', 'Hubor un error');
                        }
                    });
                }
                else{
                    Ext.Msg.alert('Error', 'No puede eliminar el par치metro seleccionado. '
                    +'Debe tener asignado el par치metro para poder elminarlo');
                }

            }
        }
    },

    onRowEditingEdit: function(editor, context, eOpts) {
        var me = this;
        if (context.record.modified)
        {
            var store = Ext.getCmp('grdParametroAsunto').getStore();
            var reco = context.record;
            if(reco.data.PRM_ID===Ext.getCmp('cbParametroPrincipal').getValue()){
                store.add(reco);
                store.sync(
                {
                    params:{
                        asunto: reco.data.ASU_CODIGO
                    },
                    success: function(batch, success)
                    {
                        store.commitChanges();
                        store.load();
                    },

                    failure: function(batch, success)
                    {
                        Ext.Msg.alert('Error', 'Hubor un error');
                    }
                });
            }
            else
            Ext.Msg.alert('Error', 'No puede asignar el par치metro seleccionado. '
            +'Debe tener asignado el par치metro para poder asignarlo.');
        }
        me.onGrdAsuntosItemClick();
    },

    onGrdParametroAsuntoCellDblClick: function(tableview, td, cellIndex, record, tr, rowIndex, e, eOpts) {
        if(record.data.PRM_ID === 0)
        Ext.getCmp('cbParam2').setDisabled(false);
        else
        Ext.getCmp('cbParam2').setDisabled(true);
    }

});
