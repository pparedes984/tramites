Ext.define('Tramites.view.adminGeneral.AsuntosViewController', {
    extend: 'Ext.app.ViewController',
    alias: 'controller.admingeneral.asuntos',

    onCbAsuntosKeyup: function(textfield, e, eOpts) {
        var txtAsunto = Ext.getCmp('cbAsuntos').getValue();
        if(txtAsunto !== null && e.isSpecialKey() === false){//8 = Backspace
            var strAsunto = Ext.getCmp('cbAsuntos').getStore();
            strAsunto.removeAll();
            Ext.Ajax.request({
                method: 'post',
                url: '../servidor/tramites/asunto/getAsuntoBusqueda',
                params: {
                    asunto: txtAsunto
                },
                success: function (response, options) {
                    strAsunto.load();
                    Ext.getCmp('cbAsuntos').expand();
                }
            });
        }
    },

    onBtnAgregarAsuntoClick: function(button, e, eOpts) {
        var grid = Ext.getCmp('grdAsuntos2');
        var store = grid.getStore();
        store.insert(0,
        {
            ASU_CODIGO: 0,
            ASU_ACTIVO: 1
        });
    },

    onBtnLimpiarAsuntos2Click: function(button, e, eOpts) {
        Ext.getCmp('grdAsuntos2').getStore().removeAll();
        var strAsunto = Ext.getCmp('grdAsuntos2').getStore();
        strAsunto.proxy.extraParams = {
            todo: 1
        };
        strAsunto.load();
        Ext.getCmp('cbAsuntos').setValue(null);
    },

    onRowEditingEdit: function(editor, context, eOpts) {
        var me = this;
        if (context.record.modified)
        {
            var store = Ext.getCmp('grdAsuntos2').getStore();
            var reco = context.record;
            store.add(reco);
            store.sync(
            {
                success: function(batch, success)
                {
                    store.commitChanges();
                    store.load();
                },

                failure: function(batch, success)
                {
                    Ext.Msg.alert('Error', 'Hubor un error');
                }
            });

        }
    },

    onRowEditingCanceledit: function(editor, context, eOpts) {
        this.onBtnLimpiarAsuntos2Click();
    },

    onGrdAsuntos2Render: function(component, eOpts) {
        this.onBtnLimpiarAsuntos2Click();
    }

});
